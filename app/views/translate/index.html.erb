<div class="container">
  <h2> Translate from transliterated georgian to russian </h2>
  <%= form_with url: translate_path, method: :post do %>
    <div class="field">
      <label for="source">Translate</label>
      <%= text_area_tag :source, @source, class: 'form-control', style: 'width: 100%; height: 100px' %>
    </div>
    <div class="actions">
      <button type="submit" class="btn btn-primary">
        Translate <i class="fa fa-arrow-right"></i>
      </button>
    </div>
  <% end %>

  <% if @result %>
    <h2> Result: </h2>
        <div>
          <%= @result %>
        </div>
  <% end %>
</div>
